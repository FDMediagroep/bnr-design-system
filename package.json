{
    "name": "@fdmg/bnr-design-system",
    "version": "0.1.9",
    "description": "BNR Design System",
    "publishConfig": {
        "access": "public"
    },
    "types": "main.d.ts",
    "main": "main.js",
    "scripts": {
        "build": "npx next build",
        "build:ci": "npm run build && npm run build:npm",
        "build:npm": "npm run webpack:prod && npm run copy:dts",
        "build:sls": "npx cross-env SERVERLESS=true next build",
        "copy:dts": "npx copyfiles \"./dist.d.ts/src/**/*.d.ts\" \"./dist\" -V -u 2",
        "dev": "npx next dev",
        "docker:build": "docker build -t bnr-design-system .",
        "docker:logs": "docker logs bnr-design-system",
        "docker:pull": "docker pull ghcr.io/fdmediagroep/bnr-design-system:latest",
        "docker:run": "docker run -d -p 3000:3000 --env-file .env --name bnr-design-system bnr-design-system",
        "docker:restart": "docker restart bnr-design-system",
        "docker:stop": "docker stop bnr-design-system && docker rm bnr-design-system && docker image prune -f",
        "docker:tag": "docker tag ghcr.io/fdmediagroep/bnr-design-system:latest bnr-design-system:latest",
        "lint": "eslint \"src/**\"",
        "json-to-scss": "json-to-scss public/assets/design-tokens/* src/design-tokens",
        "prettier": "prettier -c **/*.ts?",
        "start": "npx next build && npx next start",
        "test": "jest --passWithNoTests",
        "test:updateSnapshots": "jest -u --passWithNoTests",
        "typedoc": "npx typedoc",
        "vc:rm": "vc rm bnr-design-system --safe --yes",
        "webpack:prod": "npx cross-env NODE_ENV=production webpack --mode=production",
        "webpack-bundle-analyzer:npm": "npx cross-env WEBPACK_BUNDLE_ANALYZER=true npm run webpack:prod",
        "webpack-bundle-analyzer:next": "npx cross-env WEBPACK_BUNDLE_ANALYZER=true next build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FDMediagroep/bnr-design-system.git"
    },
    "author": "Willem Liu",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/FDMediagroep/bnr-design-system/issues"
    },
    "homepage": "https://github.com/FDMediagroep/bnr-design-system#readme",
    "devDependencies": {
        "@fdmg/css-grid": "^2.0.13",
        "@fdmg/resubstitute": "^0.1.2",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@testing-library/user-event": "^13.2.1",
        "@types/jest": "^27.0.1",
        "@types/node": "^16.7.1",
        "@types/react": "^17.0.19",
        "@types/react-dom": "^17.0.9",
        "@typescript-eslint/eslint-plugin": "^4.31.0",
        "@typescript-eslint/parser": "^4.29.3",
        "@typescript-eslint/typescript-estree": "^4.29.3",
        "autoprefixer": "^10.3.2",
        "copy-webpack-plugin": "^9.0.1",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "css-loader": "^6.2.0",
        "eslint": "^7.32.0",
        "eslint-config-next": "^11.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.1",
        "eslint-plugin-react": "^7.24.0",
        "fetch-jsonp": "^1.2.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.0.6",
        "json-to-scss": "^1.6.2",
        "micro-cors": "^0.1.1",
        "mini-css-extract-plugin": "^2.2.0",
        "next": "^11.1.0",
        "path-to-regexp": "^6.2.0",
        "postcss-flexbugs-fixes": "^5.0.2",
        "postcss-loader": "^6.1.1",
        "postcss-normalize": "^10.0.0",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.3.2",
        "pretty": "^2.0.0",
        "raw-loader": "^4.0.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-element-to-jsx-string": "^14.3.2",
        "react-markdown": "^6.0.3",
        "rehype-raw": "^5.1.0",
        "rehype-sanitize": "^4.0.0",
        "sass": "^1.38.1",
        "sass-loader": "^12.1.0",
        "style-loader": "^3.2.1",
        "svgo": "^2.4.0",
        "svgo-loader": "^3.0.0",
        "ts-jest": "^27.0.5",
        "ts-loader": "^9.2.5",
        "ts-node": "^10.2.1",
        "typedoc": "^0.21.6",
        "typescript": "^4.3.5",
        "webpack": "^5.51.1",
        "webpack-bundle-analyzer": "^4.4.2",
        "webpack-cli": "^4.8.0"
    }
}
