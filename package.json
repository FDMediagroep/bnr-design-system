{
    "name": "@fdmg/bnr-design-system",
    "version": "0.1.9",
    "description": "BNR Design System",
    "publishConfig": {
        "access": "public"
    },
    "types": "main.d.ts",
    "main": "main.js",
    "scripts": {
        "build": "npx next build",
        "build:ci": "npm run build && npm run build:npm",
        "build:npm": "npm run webpack:prod && npm run copy:dts",
        "build:sls": "npx cross-env SERVERLESS=true next build",
        "copy:dts": "npx copyfiles \"./dist.d.ts/src/**/*.d.ts\" \"./dist\" -V -u 2",
        "dev": "npx next dev",
        "lint": "eslint \"src/**\"",
        "json-to-scss": "json-to-scss public/assets/design-tokens/* src/design-tokens",
        "prettier": "prettier -c **/*.ts?",
        "start": "npx next build && npx next start",
        "test": "jest --passWithNoTests",
        "test:updateSnapshots": "jest -u --passWithNoTests",
        "typedoc": "npx typedoc",
        "vc:rm": "vc rm bnr-design-system --safe --yes",
        "webpack:prod": "npx cross-env NODE_ENV=production webpack --mode=production",
        "webpack-bundle-analyzer:npm": "npx cross-env WEBPACK_BUNDLE_ANALYZER=true npm run webpack:prod",
        "webpack-bundle-analyzer:next": "npx cross-env WEBPACK_BUNDLE_ANALYZER=true next build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FDMediagroep/bnr-design-system.git"
    },
    "author": "Willem Liu",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/FDMediagroep/bnr-design-system/issues"
    },
    "homepage": "https://github.com/FDMediagroep/bnr-design-system#readme",
    "devDependencies": {
        "@fdmg/css-grid": "^2.0.7",
        "@testing-library/jest-dom": "^5.11.10",
        "@testing-library/react": "^11.2.5",
        "@testing-library/user-event": "^13.1.5",
        "@types/jest": "^26.0.22",
        "@types/node": "^15.0.1",
        "@types/react": "^17.0.3",
        "@types/react-dom": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^4.20.0",
        "@typescript-eslint/parser": "^4.22.0",
        "@typescript-eslint/typescript-estree": "^4.22.0",
        "autoprefixer": "^10.2.5",
        "copy-webpack-plugin": "^8.1.0",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "css-loader": "^5.2.4",
        "eslint": "^7.21.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.22.0",
        "fetch-jsonp": "^1.1.3",
        "jest": "^26.6.3",
        "jest-css-modules": "^2.1.0",
        "json-to-scss": "^1.6.2",
        "micro-cors": "^0.1.1",
        "mini-css-extract-plugin": "^1.3.9",
        "next": "^10.0.8",
        "path-to-regexp": "^6.2.0",
        "postcss-flexbugs-fixes": "^5.0.2",
        "postcss-loader": "^5.2.0",
        "postcss-normalize": "^9.0.0",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.2.1",
        "pretty": "^2.0.0",
        "raw-loader": "^4.0.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-element-to-jsx-string": "^14.3.2",
        "react-markdown": "^5.0.3",
        "sass": "^1.32.8",
        "sass-loader": "^11.0.1",
        "style-loader": "^2.0.0",
        "svgo": "^1.3.2",
        "svgo-loader": "^2.2.1",
        "ts-jest": "^26.5.4",
        "ts-loader": "^8.1.0",
        "ts-node": "^9.1.1",
        "typedoc": "^0.20.36",
        "typescript": "^4.2.4",
        "webpack": "^5.30.0",
        "webpack-bundle-analyzer": "^4.4.1",
        "webpack-cli": "^4.6.0"
    }
}
